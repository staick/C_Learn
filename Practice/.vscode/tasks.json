{
    "tasks": [
        {
            "label": "create build directory",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "linux": {
                "command": "mkdir -p ./build"
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist .\\build mkdir .\\build"]
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe create active files",
            "command": "D:\\Software\\Qt\\Tools\\mingw810_64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["create build directory"],
            "detail": "Tasks generated by the debugger."
        },
    ],
    "version": "2.0.0"
}